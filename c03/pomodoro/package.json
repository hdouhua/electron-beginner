{
  "name": "pomodoro",
  "version": "1.0.0",
  "description": "pomodoro",
  "main": "app/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "pack:mac": "electron-builder build --mac",
    "pack:win": "electron-builder build --win --ia32",
    "pack:wi": "cross-env NPM_CONFIG_ELECTRON_MIRROR=http://npm.taobao.org/mirrors/electron/ electron-builder build --win --ia32",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "dragon",
  "license": "ISC",
  "build": {
    "appId": "com.fortune.pomodoro",
    "productName": "Pomodoro",
    "files": [
      "app/**/*",
      "package.json",
      "!res/**"
    ],
    "asar": false,
    "directories": {
      "buildResources": "resource",
      "output": "release"
    },
    "copyright": "Copyright Â© 2021 dragon",
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "resources/icon.icns"
    },
    "dmg": {
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 180,
          "type": "file"
        }
      ],
      "iconSize": 128
    },
    "win": {
      "icon": "resources/icon.ico",
      "target": [
        "squirrel",
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "language": "2052",
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "squirrelWindows": {
      "iconUrl": "https://raw.githubusercontent.com/hdouhua/electron-beginner/main/c03/pomodoro/resources/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7",
    "electron-builder-squirrel-windows": "^22.11.8"
  },
  "dependencies": {
    "about-window": "^1.14.0",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "progressbar.js": "^1.1.0",
    "timer.js": "^1.0.4"
  }
}
